<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        table,tr,td{
            border : 1px solid black;
        }
    </style>
</head>
<body>
    
    <h1>Add a new user
        <form method="GET" action="/newuser">
            <button>Add a new user</button>
        </form>
    </h1>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% for(user of users) { %>
           <tr>
             <td><%= user.id %></td>
             <td><%= user.email  %></td>
             <td><%= user.username %></td>
             <td>
                <form method="Get" action="/user/<%= user.id %>/edit">
                    <button>Edit username</button>
                </form>
             </td>
             <td>
                <form method="Delete" action="/delete/<%= user.id %>">
                    <button>Delete</button>
                </form>
             </td>
           </tr>
        <% } %>
    </table>
    
</body>
</html>